<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="3dp"
    card_view:cardCornerRadius="4dp"
    tools:context="com.app.aptap.fragment.NoticePagerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_5_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.app.aptap.ui.CustomTextView
                style="@style/noticeHeadingStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="0dp"
                android:layout_weight=".2"
                android:gravity="left|center_vertical"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:text="Notice" />


            <com.app.aptap.ui.CustomTextView
                android:id="@+id/noticeDateTime"
                style="@style/TextViewStyleDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="0dp"
                android:layout_weight=".2"
                android:gravity="right|center_vertical"
                android:inputType="textMultiLine"
                android:lines="2"
                android:maxLines="2"
                android:minLines="2"
                android:text="Thursday 27th Jan 2017, 11:00 AM" />
        </LinearLayout>

        <com.app.aptap.ui.CustomTextView
            android:id="@+id/noticeSender"
            style="@style/noticeContentStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:layout_weight=".2"
            android:gravity="left|center_vertical"
            android:inputType="textMultiLine"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:text="Released by Admin" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/padding_5_dp"
            android:layout_marginTop="@dimen/padding_5_dp"
            android:background="@color/hintColor">

        </View>

        <com.app.aptap.ui.CustomTextView
            android:id="@+id/noticeTitle"
            style="@style/noticeHeadingStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:gravity="left|center_vertical"
            android:inputType="textMultiLine"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:text="Today's Update" />


        <com.app.aptap.ui.CustomTextView
            android:id="@+id/noticeDescription"
            style="@style/noticeContentStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:gravity="left|center_vertical"
            android:inputType="textMultiLine"
            android:lines="10"
            android:maxLines="10"
            android:minLines="10"
            android:text="Notice Info come here" />


        <com.app.aptap.ui.CustomTextView
            style="@style/noticeHeadingStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:gravity="left|center_vertical"
            android:inputType="textMultiLine"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:text="Thank You" />

        <com.app.aptap.ui.CustomTextView
            android:id="@+id/noticeSenderName"
            style="@style/noticeContentStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:gravity="left|center_vertical"
            android:inputType="textMultiLine"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:text="Admin" />

    </LinearLayout>
</android.support.v7.widget.CardView>
