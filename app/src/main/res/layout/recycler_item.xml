<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/recyclerViewItem"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_5_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.app.aptap.ui.CircleImageView
                android:layout_width="@dimen/home_profile_image_h_w"
                android:layout_height="@dimen/home_profile_image_h_w"
                android:padding="@dimen/padding_5_dp"
                android:src="@drawable/events"
                app:civ_border_color="@color/headerColor"
                app:civ_border_width="2dp" />

            <com.app.aptap.ui.CustomTextView
                android:id="@+id/feedTitle"
                style="@style/TextViewStyleTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="0dp"
                android:layout_weight="1.06"
                android:gravity="left|center_vertical"
                android:inputType="textMultiLine"
                android:lines="2"
                android:textStyle="bold"
                android:maxLines="2"
                android:minLines="2"
                android:text="Aditya Narayan Mishra Aditya Narayan Mishra Aditya Narayan Mishra Aditya \n Narayan Mishra Aditya Narayan Mishra Aditya Narayan Mishra"
                android:textAppearance="@style/signUpButtonStyle" />

            <ImageView
                android:id="@+id/feedMenu"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="-10dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:src="@drawable/donts" />

        </LinearLayout>

        <ImageView
            android:id="@+id/feedImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_image_height"
            android:src="@color/cardview_dark_background" />



        <com.app.aptap.ui.CustomTextView
            android:id="@+id/feedDescription"
            style="@style/TextViewStyleContent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="3"
            android:minLines="3"
            android:text="Aditya Narayan Mishra Aditya Narayan Mishra Aditya Narayan Mishra Aditya Narayan Mishra Aditya Narayan Mishra Aditya Narayan Mishra"
            android:textAppearance="@style/signUpButtonStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <com.app.aptap.ui.CustomTextView
                android:id="@+id/feedDateTime"
                style="@style/TextViewStyleDate"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="right|center_vertical"
                android:gravity="right|center_vertical"
                android:text="17 05 2017"
                android:textAppearance="@style/signUpButtonStyle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hintColor">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_card_footer_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">


                    <ImageView
                        android:id="@+id/feedLikeImage"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:src="@drawable/like_select" />

                </RelativeLayout>


                <com.app.aptap.ui.CustomTextView
                    android:id="@+id/feedLikeCount"
                    style="@style/EditTextStyleText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="17"
                    android:textAppearance="@style/signUpButtonStyle" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/feedCommentImage"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:src="@drawable/comment_select" />
                </RelativeLayout>


                <com.app.aptap.ui.CustomTextView
                    android:id="@+id/feedCommentCount"
                    style="@style/EditTextStyleText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="37"
                    android:textAppearance="@style/signUpButtonStyle" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".3">

            </View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/feedViewImage"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:src="@drawable/view_select" />
                </RelativeLayout>



                <com.app.aptap.ui.CustomTextView
                    android:id="@+id/feedViewCount"
                    style="@style/EditTextStyleText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="21"
                    android:textAppearance="@style/signUpButtonStyle" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/feedShareImage"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:src="@drawable/share_select" />
                </RelativeLayout>



                <com.app.aptap.ui.CustomTextView
                    android:id="@+id/feedShareCount"
                    style="@style/EditTextStyleText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="13"
                    android:textAppearance="@style/signUpButtonStyle" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/itemTextView"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeight"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:visibility="gone" />

</android.support.v7.widget.CardView>